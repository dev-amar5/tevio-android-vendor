<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_marker_bottom"/>

    <View
        android:id="@+id/line"
        android:layout_width="3dp"
        android:layout_height="25dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/bg_round_solid_1x"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_duration" />

    <LinearLayout
        android:id="@+id/v_duration"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/bg_marker_destination"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_duration_1"
            style="@style/TextView.Bold"
            android:gravity="center"
            android:hint="--"
            android:includeFontPadding="false"
            android:textColor="@color/white_fix"
            android:textColorHint="@color/white_fix"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_duration_2"
            style="@style/TextView.Regular"
            android:gravity="center"
            android:hint="Min"
            android:includeFontPadding="false"
            android:textColor="@color/white_fix"
            android:textColorHint="@color/white_fix"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
