<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tevioapp.vendor.utility.AppConstants" />

        <variable
            name="holder"
            type="com.tevioapp.vendor.presentation.common.base.adapter.BaseViewHolder" />

        <variable
            name="bean"
            type="com.tevioapp.vendor.data.SafetyOption" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/card_shadow_color"
        app:base_adapter_callback="@{holder}"
        app:cardBackgroundColor="@color/card_bg_dual"
        app:cardCornerRadius="@dimen/card_corner_radius_medium"
        app:rippleColor="@android:color/transparent"
        app:cardElevation="@dimen/card_elevation_medium"
        app:strokeWidth="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_location"
                app:image_disable_crop="@{true}"
                app:image_url="@{bean.imageUrl}" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.Medium"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@{bean.title}"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                app:custom_text_color="@{bean.colorCode}"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_desc"
                style="@style/TextView.Regular"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:lines="2"
                android:text="@{bean.description}"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                tools:text="Title" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>