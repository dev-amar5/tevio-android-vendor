    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="holder"
            type="com.tevioapp.vendor.presentation.common.base.adapter.BaseViewHolder" />
    </data>

    <TextView
        android:id="@+id/tv_option"
        style="@style/TextView.Medium"
        app:base_adapter_callback="@{holder}"
