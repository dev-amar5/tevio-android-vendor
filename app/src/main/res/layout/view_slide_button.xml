<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_height">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/_5sdp"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/text"
            style="@style/TextView.Bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white_fix"
            android:textSize="@dimen/_14ssp"
            tools:text="Button Text" />

        <ImageView
            android:id="@+id/ivSlider"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/bg_round_solid_2x"
            android:importantForAccessibility="no"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_arrow_long_right" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pb_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="2"
            android:scaleY="2"
            android:id="@+id/lottie"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="@color/white_fix"
            app:lottie_fileName="anim_dots.json"
            app:lottie_loop="true" />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
