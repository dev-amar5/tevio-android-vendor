<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tevioapp.vendor.utility.calender.dialog.SingleDateTimeSheetVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_round_white"
        android:backgroundTint="@color/card_bg_dual"
        android:paddingBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cross"
            style="@style/IconFilterCross"
            android:layout_margin="@dimen/horizontal_margin"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/v_label"
            layout="@layout/view_left_title_line_bold14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_cross" />

        <com.tevioapp.vendor.utility.calender.SingleDateAndTimePicker
            android:id="@+id/v_date_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintEnd_toEndOf="@id/v_label"
            app:layout_constraintStart_toStartOf="@id/v_label"
            app:layout_constraintTop_toBottomOf="@id/v_label"
            app:picker_curved="true"
            app:picker_selectedTextColor="@color/black"
            app:picker_textColor="@color/gray"
            app:picker_visibleItemCount="3" />

        <Button
            android:id="@+id/btn_save"
            style="@style/ButtonSolid"
            android:layout_width="0dp"
            android:layout_marginVertical="@dimen/vertical_margin"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="@+id/v_label"
            app:layout_constraintStart_toStartOf="@+id/v_label"
            app:layout_constraintTop_toBottomOf="@id/v_date_time" />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextView.LightMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingVertical="@dimen/vertical_margin"
            android:text="@string/cancel"
            android:textColor="@color/orange"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/v_label"
            app:layout_constraintStart_toStartOf="@id/v_label"
            app:layout_constraintTop_toBottomOf="@+id/btn_save"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>