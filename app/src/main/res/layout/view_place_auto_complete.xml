<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_search"
            style="@style/EditText.Search.Stroked"
            android:layout_gravity="center"
            android:hint="@string/search_for_area_street_name"
            tools:ignore="Autofill" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/bg_round_corner_solid"
            android:backgroundTint="@color/card_bg_dual"
            android:elevation="@dimen/_2sdp"
            android:visibility="gone"
            tools:itemCount="5"
            tools:listitem="@layout/holder_place_item"
            tools:visibility="visible" />

    </LinearLayout>
</layout>
