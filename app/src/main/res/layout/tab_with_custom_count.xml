<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_screen">

        <ImageView
            android:id="@+id/iv_left_view"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@id/cl_main"
            app:layout_constraintEnd_toStartOf="@+id/iv_bg_solid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cl_main" />

        <ImageView
            android:id="@+id/iv_right_view"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@id/cl_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_bg_solid"
            app:layout_constraintTop_toTopOf="@+id/cl_main" />

        <ImageView
            android:id="@+id/cl_main"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/bg_circle_only_stroke"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bg_solid"
            app:layout_constraintEnd_toEndOf="@+id/iv_bg_solid"
            app:layout_constraintStart_toStartOf="@+id/iv_bg_solid"
            app:layout_constraintTop_toTopOf="@+id/iv_bg_solid" />

        <ImageView
            android:id="@+id/iv_bg_solid"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/bg_circle_solid"
            app:layout_constraintEnd_toStartOf="@+id/iv_right_view"
            app:layout_constraintStart_toEndOf="@+id/iv_left_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/_5sdp"
            app:layout_goneMarginStart="@dimen/_5sdp"
            app:tint="@color/orange" />

        <TextView
            android:id="@+id/tv_count"
            style="@style/TextView.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white_fix"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bg_solid"
            app:layout_constraintEnd_toEndOf="@+id/iv_bg_solid"
            app:layout_constraintStart_toStartOf="@+id/iv_bg_solid"
            app:layout_constraintTop_toTopOf="@+id/iv_bg_solid" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>