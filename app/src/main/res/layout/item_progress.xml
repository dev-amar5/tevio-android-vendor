<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.tevioapp.vendor.presentation.common.base.dialog.BaseCustomDialog.Listener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:outlineSpotShadowColor="@color/card_shadow_color"
        app:cardBackgroundColor="@color/card_bg_dual"
        app:cardCornerRadius="@dimen/card_corner_radius_medium"
        app:cardElevation="@dimen/card_elevation_medium"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <FrameLayout
                android:id="@+id/v_progress"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_percent"
                    style="@style/TextView.Medium"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    tools:text="45%" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:max="100"
                    android:progress="0"
                    app:indicatorColor="@color/orange"
                    app:indicatorSize="@dimen/_30sdp"
                    app:trackColor="#2F0F0F0F"
                    app:trackThickness="@dimen/_1sdp" />

                <ImageView
                    android:id="@+id/iv_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_info_circle"
                    app:tint="@color/orange" />

            </FrameLayout>

            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:orientation="vertical"
                app:constraint_referenced_ids="tv_file_name,tv_message"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_retry"
                app:layout_constraintStart_toEndOf="@id/v_progress"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_file_name"
                style="@style/TextView.Medium"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_message"
                style="@style/TextView.Regular"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/red"
                android:textSize="@dimen/_10ssp"
                tools:text="error message" />

            <ImageView
                android:id="@+id/iv_retry"
                style="@style/IconFilterCross"
                android:layout_marginEnd="@dimen/_5sdp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_retry"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_cross"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_cross"
                style="@style/IconFilterCross"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>