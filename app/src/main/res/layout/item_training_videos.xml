<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.tevioapp.vendor.data.TrainingVideo" />

        <variable
            name="holder"
            type="com.tevioapp.vendor.presentation.common.base.adapter.BaseViewHolder" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_bg_dual"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingVertical="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextView.LightMedium"

            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{bean.name}"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/cv_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Video Training 1" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/TextView.Regular"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:lines="3"
            android:text="@{bean.description}"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry..." />

        <TextView
            android:id="@+id/tv_view_more"
            style="@style/TextView.Regular"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/view_more"
            android:textColor="@color/orange"
            android:textSize="@dimen/_10ssp"
            app:base_adapter_callback="@{holder}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc"
            app:underline="@{true}" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/card_corner_radius_medium"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_view_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                app:image_place_holder="@{@drawable/ic_placeholder_horizontal}"
                app:image_url="@{bean.thumbnailUrl}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_fix_10" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_action_play"
                app:base_adapter_callback="@{holder}" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>