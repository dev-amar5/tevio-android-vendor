<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp">

        <include
            android:id="@+id/view_steps"
            layout="@layout/view_left_title_line12" />

        <TextView
            android:id="@+id/tv_type"
            style="@style/TextView.Bold"
            android:layout_width="@dimen/_0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@+id/iv_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_steps"
            tools:text="@string/profile" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/TextView.Regular"
            android:layout_width="@dimen/_0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@+id/iv_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_type"
            tools:text="Description" />

        <RelativeLayout
            android:id="@+id/rl_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc">

            <TextView
                android:id="@+id/tv_start_now"
                style="@style/TextView.Bold"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/start_now"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10ssp"
                app:underline="@{true}"
                tools:text="Start Now" />

            <TextView
                android:id="@+id/tv_status_result"
                style="@style/TextView.Bold"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/completed"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/_11ssp"
                app:drawableStartCompat="@drawable/ic_tik"
                tools:text="@string/completed" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_placeholder_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/rl_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_type" />

        <View
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            android:background="@color/transparent_60"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/rl_status"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>