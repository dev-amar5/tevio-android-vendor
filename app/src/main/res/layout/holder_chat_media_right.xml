<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.tevioapp.vendor.utility.AppConstants" />

        <variable
            name="holder"
            type="com.tevioapp.vendor.presentation.common.base.adapter.BaseViewHolder" />

        <variable
            name="bean"
            type="com.tevioapp.vendor.data.ChatMessage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginBottom="@dimen/chat_margin_bottom"
        android:layout_marginTop="@dimen/chat_margin_top"
        android:paddingStart="@dimen/chat_margin_end_large"
        android:paddingEnd="@dimen/chat_margin_start">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:base_adapter_callback="@{holder}"
            app:cardBackgroundColor="@color/chat_right_card"
            app:cardCornerRadius="@dimen/chat_corner_radius"
            app:cardElevation="@dimen/chat_card_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <com.tevioapp.vendor.presentation.common.compoundviews.SquareFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                app:sl_adjust_side="by_width">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/chat_right_card"
                    app:cardCornerRadius="@dimen/chat_image_radius"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_chat"
                        app:base_adapter_callback="@{holder}"
                        android:transitionName="image_shared"
                        android:src="@drawable/ic_placeholder_vertical"
                        app:image_place_holder="@{@drawable/ic_placeholder_vertical}"
                        app:image_url="@{bean.url}" />
                </com.google.android.material.card.MaterialCardView>

            </com.tevioapp.vendor.presentation.common.compoundviews.SquareFrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_time"
            style="@style/TextView.Regular"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:date_format="@{AppConstants.FORMAT_DATE_TIME_SHORT}"
            app:date_timestamp="@{bean.createdAt}"
            app:date_today_only_time="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_one"
            tools:text="12:00 AM" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>