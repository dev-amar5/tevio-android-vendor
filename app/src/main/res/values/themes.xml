<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CropperTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextView.LeftTitle">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.LeftTitleBold">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextView.Thin">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/montserrat_thin</item>
    </style>

    <style name="TextView.Light">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="TextView.LightMedium">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextView.AlternateLightMedium">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_regular</item>
    </style>

    <style name="TextView.AlternateBold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
    </style>

    <style name="TextView.smallBold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ButtonSolid" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white_fix</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="ButtonSolid.Icon">
        <item name="iconSize">@dimen/_15sdp</item>
        <item name="iconPadding">@dimen/_5sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white_fix</item>
    </style>

    <style name="ButtonStroke" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonStroke.Icon">
        <item name="iconSize">@dimen/_15sdp</item>
        <item name="iconPadding">@dimen/_5sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/orange</item>
    </style>

    <style name="ButtonStroke.White">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="EditText.Solid">
        <item name="android:background">@drawable/edit_back_view_solid</item>
    </style>

    <style name="EditText.DropDown">
        <item name="android:background">@drawable/edit_back_view_solid</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
    </style>


    <style name="EditText.Search">
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edit_back_view_search</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/orange</item>
    </style>

    <style name="EditText.Search.Stroked">
        <item name="android:background">@drawable/edit_back_view_search_stroked</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableEnd">@null</item>
        <item name="android:drawableTint">@color/orange</item>
    </style>

    <style name="EditText.Stroke">
        <item name="android:background">@drawable/edit_back_view_stroke</item>
    </style>


    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="TextView.EditTextHeader">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconSize">@dimen/_16sdp</item>
        <item name="itemIconTint">@drawable/bottom_navigation</item>
        <item name="itemTextColor">@drawable/bottom_navigation</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="itemPaddingTop">@dimen/_3sdp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/ActiveItemText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveItemText</item>
    </style>

    <!-- Style for the active item text appearance -->
    <style name="ActiveItemText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <!-- Style for the inactive item text appearance -->
    <style name="InactiveItemText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetAnimations" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/sheet_in</item>
        <item name="android:windowExitAnimation">@anim/sheet_out</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>

    </style>

    <style name="Dialog.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_normal</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


    <!-- parking details -->
    <style name="TabTextAppearance">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Tab.Text" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Customize title text color -->
        <item name="colorPrimary">#FF5722</item>
        <!-- Customize calendar view text and selection -->
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="MainHeader">
        <item name="android:src">@drawable/logo_header_green</item>
    </style>

    <style name="IconFilterCross">
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:background">@drawable/bg_circle_solid</item>
        <item name="android:backgroundTint">@color/icon_bg_color</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:src">@drawable/ic_cross</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="BgRoundSquare">
        <item name="android:layout_height">@dimen/_33sdp</item>
        <item name="android:layout_width">@dimen/_33sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:background">@drawable/bg_icon_square</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="BgCircle">
        <item name="android:layout_height">@dimen/_33sdp</item>
        <item name="android:layout_width">@dimen/_33sdp</item>
        <item name="android:background">@drawable/bg_icon_round</item>
        <item name="android:padding">@dimen/_9sdp</item>
    </style>

    <style name="IconCalender">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
        <item name="android:tint">@color/dark_green</item>
    </style>


    <style name="AllRoundedCorners15">
        <item name="cornerSize">15%</item>
    </style>

    <style name="AllRoundedCorners18">
        <item name="cornerSize">18%</item>
    </style>

    <style name="AllRoundedCorners20">
        <item name="cornerSize">20%</item>
    </style>

    <style name="AllRoundedCorners10">
        <item name="cornerSize">10%</item>
    </style>

    <style name="AllRoundedCorners5">
        <item name="cornerSize">5%</item>
    </style>


    <style name="BottomRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_15sdp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="TopRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:thumb">@drawable/switch_thumb_default</item>
        <item name="track">@drawable/switch_track</item>
    </style>
    <!-- Date Picker Theme -->
    <style name="MaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorSurface">@color/card_bg_dual</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="materialCalendarStyle">@style/CustomMaterialCalendarStyle</item>
        <item name="textAppearanceBody2">@style/WeekDayTextAppearance</item>
    </style>

    <style name="CustomMaterialCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/CalendarDaySelected</item>
    </style>

    <style name="CalendarDaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="android:textColor">@color/white</item>
        <item name="itemFillColor">@color/black</item>
    </style>

    <style name="WeekDayTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Time Picker Theme -->
    <style name="MaterialTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorSurface">@color/card_bg_dual</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="materialTimePickerStyle">@style/CustomTimePickerStyle</item>
    </style>

    <style name="CustomTimePickerStyle" parent="Widget.MaterialComponents.TimePicker">
        <item name="clockFaceBackgroundColor">@color/white</item>
        <item name="clockNumberTextColor">@color/black</item>
        <item name="clockHandColor">@color/black</item>
    </style>

</resources>